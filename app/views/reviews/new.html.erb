<div class="container">
<h1>New review submission</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <h3>Add a review for "<%= @restaurant.name %>"</h3>
  <p> Your comments: <%= f.input :content %></p>
  <p> How many stars: <%= f.input :rating %> </p>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
  <%= link_to "Back to list", restaurants_path %>
  <%= link_to "See reviews", restaurant_reviews_path(@restaurant) %>
</div>
